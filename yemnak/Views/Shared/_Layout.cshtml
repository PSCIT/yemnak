
@using System.Web.Optimization;
@using System.Globalization;

@if (CultureInfo.CurrentCulture.TextInfo.IsRightToLeft == true)
{
    ViewBag.dir = "rtl"; ViewBag.rtl = true;
}

else
{
    ViewBag.dir = "ltr"; ViewBag.rtl = false;
}

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name" dir=@ViewBag.dir>
@{
    Session["lang"] = CultureInfo.CurrentCulture.Name;
}
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="PSC Website and Application for Yemnak">
    <meta name="author" content="Shabbir-Salumberwala/Kamal-Ibrahim">
    <meta name="generator" content="Visual Studio 2015" />
    <meta name="application-name" content="PSC Yemnak website/App" />
    <meta name="keywords" content="HTML5,CSS3,MVC-5,JavaScript,Jquery,Razor,bootstrap-4">

    <title>@ViewBag.Title | Yemnak Concierge</title>

    @Styles.Render("~/Contents/Stylesheets/bootstrap/bootstrap")

    <!-- Add the slick-theme.css if you want default styling -->
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.0/slick/slick.css" />
    <!-- Add the slick-theme.css if you want default styling -->
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.0/slick/slick-theme.css" />

    @Styles.Render("~/Contents/Stylesheets/FontAwesome")

    @Styles.Render("~/Contents/Stylesheets/animate")

    @Styles.Render("~/Contents/Stylesheets/LocalStyles")

    @Styles.Render("~/Contents/Stylesheets/style" + (CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "-rtl":"") + ".css");


</head>
<body>
    <div class="topbar text-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-sm-3 col-3 img-flag">
                    <img class="img-fluid" src="~/Contents/Images/Flag_of_Kuwait.svg" />
                    <img class="img-fluid" src="~/Contents/Images/Flag_of_the_United_Kingdom.svg" />
                    <img class="img-fluid" src="~/Contents/Images/Flag_of_the_United_Arab_Emirates.svg" />
                </div>
                <div class="col-md-2 d-md-block d-none social_icons">
                    <a href="#"><img src="~/Contents/Images/facebook_logo_white_x50.png" alt="Facebook Yemnak" /></a>
                    <a href="#"><img src="~/Contents/Images/Twitter_logo_white_x50.png" /></a>
                    <a href="#"><img src="~/Contents/Images/instagram_logo_white_x50.png" /></a>
                </div>

                <div class="col-lg-4 col-md-5 col-sm-6 col-6">
                    <h6>Contact : 1824824  |  info@yemnak.com</h6>
                </div>

                <div class="ml-sm-auto ml-2 language">
                    <a class="text-light" href="#">English</a> | <a class="fontArL languageAr text-light" href="#">العربي</a>
                </div>
            </div>
        </div>
    </div>

    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-2 order-lg-1 col-md-3 col-4 order-2">
                    <img class="img-fluid logo" src="~/Contents/Images/Yemnak_Logo.svg" />
                </div>

                <div class="col-lg-10 order-lg-2 col-md-9 col-7 order-1 ml-auto navbar-Parent">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        @*<a class="navbar-brand" href="#">Navbar</a>*@
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="#"><i class="fa fa-home" aria-hidden="true"></i> <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item"><a class="nav-link" href="/home#about">About</a></li>
                                <li class="nav-item"><a class="nav-link" href="/home#services">Services</a></li>
                                <li class="nav-item"><a class="nav-link" href="#">Contact Us</a></li>
                                <li class="nav-item"><a class="nav-link" href="#">Media</a></li>
                                <li class="nav-item"><a class="nav-link" href="/home#clients">Clients</a></li>
                                <li class="nav-item"><a class="nav-link text-light" href="#">Membership Request</a></li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>

            <hr />

            <div class="header-content">
                <div class="row">
                    <div class="col-12">
                        <h2 class="text-center">DIVERSIFIED SERVICES</h2>
                        <h1 class="text-center">UNVARYING QUALITY</h1>
                        <p class="text-center">
                            Yemnak's concierge service which provides customers with all the services they require, such
                            as completing government transactions in Kuwait also airport delivery which Yemnak
                            achieves the highest level of luxury for VIP's.
                        </p>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-4 col-5">
                        <a href="#" class="btn btn-block btn-dark">Learn More</a>
                    </div>
                </div>
            </div>



        </div>
    </header>

    @RenderBody()

    <!-- #region Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-5 col-sm-6 col-8 mx-auto">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-6 text-center"><img class="img-fluid logo" src="~/Contents/Images/Yemnak_Logo.svg" /></div>
                        <div class="col-md-6 col-sm-6 col-6 text-center"><img class="img-fluid logo" src="~/Contents/Images/PSCLogo.svg" /></div>
                    </div>
                    <p class="text-justify text-light about_us">
                        YEMNAK is one of the services provided by Public Services Company. The service has been
                        launched since 2003 and one of our first and current main clients are the General
                        Secretariat of the Council of Ministers.
                    </p>
                </div>
                <div class="col-md-1 col-sm-1">
                    <hr class="d-none d-sm-block" width="1" style="background-color:#fff;height: 95%;" />
                    <hr class="d-block d-sm-none" style="background-color:#fff; width:85%" />
                </div>
                <div class="col-lg-7 col-md-6 col-sm-5 col-8 mx-auto text-light">
                    <div class="contact_details">
                        <div class="address">
                            <h2>Address</h2>
                            <p>Ministry Zone, Al-Shuhadaa Governance Area,  Beside NBK Bank Building, South Surra</p>
                        </div>

                        <div class="contact">
                            <h2>Contact</h2>
                            <p>1824824  |  info@yemnak.com</p>
                        </div>

                        <div class="social">
                            <a href="#"> <img class="img-fluid" src="~/Contents/Images/facebook-fb-icon.svg" /></a>
                            <a href="#"><img class="img-fluid" src="~/Contents/Images/twitter-icon.png" /></a>
                            <a href="#"><img class="img-fluid" src="~/Contents/Images/snapchat-icon.png" /></a>
                            <a href="#"><img class="img-fluid" src="~/Contents/Images/instagram-icon.png" /></a>
                        </div>

                    </div>

                    <div class="copyright">
                        <p>
                            Copyright © 2017 All rights reserved Public Service Company Kuwait
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- #endregion -->

    @Scripts.Render("~/Contents/Scripts/jquery/jquery")

    @Scripts.Render("~/Contents/Scripts/popper/popper")

    @Scripts.Render("~/Contents/Scripts/bootstrap/bootstrap")

    @Scripts.Render("~/Contents/Scripts/modernizr/modernizr")

    <script type="text/javascript" src="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.0/slick/slick.min.js"></script>

    @Scripts.Render("~/Contents/Scripts/LocalScripts")

