                            <li>@SiteResources.Card_Title_First_LIstitem_3</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_4</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_5</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_6</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_7</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_8</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_9</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_10</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_11</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_12</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_13</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_14</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_15</li>
                            <li>@SiteResources.Card_Title_First_LIstitem_16</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-11 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-center">@SiteResources.Card_Title_Second</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-justify">
                            @SiteResources.Card_Title_Second_Detail

                        </p>

                    </div>
                    <div class="card-footer">
                        <h5>@SiteResources.Card_Title_Second_Detail2</h5>
