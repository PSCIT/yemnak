                            <li>@SiteResources.Card_Title_Second_LIstitem_8</li>
                            <li>@SiteResources.Card_Title_Second_LIstitem_9</li>
                            <li>@SiteResources.Card_Title_Second_LIstitem_10</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="membership_card">
            <div class="row">
                <div class="col-12">
                    <h1 class="text-center membership_card">
                        @SiteResources.MembershipCard_Title
                    </h1>

                    <h2 class="text-center">
                        @SiteResources.MembershipCard_subtitle
                    </h2>
                </div>
            </div>
            <hr class="d-none d-sm-block" />
            <br class="d-sm-none" />
            <br class="d-sm-none" />
            <div class="row">
                <div class="col-md-6 col-sm-12 col-10 mx-auto"><img class="img-fluid rounded" src="~/Contents/Images/Classic_Card_Website.png"></div>
                <div class="col-md-6 col-sm-12 col-10 mx-auto"><img class="img-fluid rounded" src="~/Contents/Images/prestige_Card_Website.png"></div>
            </div>
            <br /><br />
            <div class="row">
                <div class="col-md-6 col-sm-12 col-10 mx-auto"><img class="img-fluid rounded" src="~/Contents/Images/Platinum_Card_Website.png"></div>
                <div class="col-md-6 col-sm-12 col-10 mx-auto"><img class="img-fluid rounded" src="~/Contents/Images/Premiere_Card_Website.png"></div>
            </div>
        </div>

    </div>
</div>

