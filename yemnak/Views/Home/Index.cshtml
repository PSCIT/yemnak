
@using yemnak.App_GlobalResources;
@using System.Globalization;
@{
    ViewBag.Title = "Offical Website";
}

<!-- #region About-Us -->

<div id="about" class="about_us Primary-Text-Color">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-11 ml-4">
                <div class="title">
                    <h1 class="text-center">@SiteResources.About_Yemnak_Title</h1>
                    <h2 class="text-center">@SiteResources.About_Yemnak_Subtitle</h2>
                </div>
                <hr />
                <div class="description">
                    <p class="text-center">
                        @SiteResources.About_Yemnak_Para
                    </p>
                </div>
            </div>
        </div>

        <div class="our_vision">
            <div class="row">
                <div class="col-lg-7 col-12">
                    <h1 class="text-center">@SiteResources.Our_Vision_Title</h1>
                    <p class="text-center">
                        @SiteResources.Our_Vision_Detail
                    </p>
                </div>
                <div class="col-lg-5 col-md-10 mx-md-auto col-12">
                    <img class="eyes" src="~/Contents/Images/pexels-eyes-photo.png" />
                </div>
            </div>
        </div>

        <div class="our_mission">
            <div class="row">
                <div class="col-md-9 ml-md-auto col-8 ml-2">
                    <p class="text-center">
                        @SiteResources.Our_Mission_Detail
                    </p>
                </div>

                <div class="col-3">
                    @if (CultureInfo.CurrentCulture.TextInfo.IsRightToLeft == true)
                    {
                        <img class="img-fluid" src="~/Contents/Images/Mission_ar.png" />
                    }
                    else
                    {
                        <img class="img-fluid" src="~/Contents/Images/Mission.png" />
                    }
                </div>

            </div>
        </div>
    </div>
</div>

<!-- #endregion -->
<!-- #region Services -->

<div id="services" class="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-7 ml-sm-auto mr-sm-auto col-5 ml-5 mr-1">
                <img class="img-fluid Yemnak_Service_Image" src="~/Contents/Images/Service_Yemnak.png" />
            </div>
            <div class="col-lg-5 col-md-6 col-sm-5 col-4 text-light">
                <h1 class="text-right">@SiteResources.Services_Title</h1>
                <h2 class="text-right">@SiteResources.Services_Subtitle</h2>
            </div>
        </div>
    </div>
</div>

