@using System.Globalization;
@using yemnak.App_GlobalResources;

@{
    ViewBag.Title = "Contact Us";
}

<style>
    body {
        background-image: url('/../Contents/Images/header_background.jpg') !important;
        background-size: 100%;
    }

    .header-content {
        display: none;
    }

    header {
        background: none;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-xl-8 mx-auto">
            <div class="map">
                <div id="map"></div>
                <div class="map-c">
                    <h2>@SiteResources.ContactUS_Title</h2>
                    @if (CultureInfo.CurrentCulture.TextInfo.IsRightToLeft == true)
                    {
                        <p>
                            منطقة الوزارة،
                            منطقة الشهداء الحكومية،
                            بجوار مبنى البنك الوطني،
                            جنوب السرة
                        </p>
                    }
                    else
                    {
                        <p>
                            Ministry Zone,
                            Al-Shuhadaa Governance Area,
                            Beside NBK Bank Building,
                            South Surra
                        </p>
                    }
                    <div class="det"><i class="fa fa-map-marker"></i> <a target="_blank" class="google_link" href="https://goo.gl/maps/wHGrNSWV5sx">@SiteResources.ContactUs_googlelink</a></div>
                    <div class="det"><i class="fa fa-phone"></i> <span style="font-family: 'Roboto', sans-serif;">22252111</span></div>
                    <div class="det"><i class="fa fa-globe"></i> <a target="_blank" style="font-family: 'Roboto', sans-serif;" href="http://www.yemnak.com/">www.yemnak.com</a> </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br /><br />


<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB0Zt5o8EgHPWVa2JNCtCOQe1-5BFj438Q"></script>


<script>
    var myCenter = new google.maps.LatLng(29.2729674, 48.0165458);
    function initialize() {

        var mapProp = {
            center: myCenter,
            zoom: 17,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("map"), mapProp);

        var marker = new google.maps.Marker({
            map: map,
            draggable: true,
            animation: google.maps.Animation.BOUNCE,
            position: { lat: 29.2729674, lng: 48.0165458 }
        });
        marker.setMap(map);
    }
    google.maps.event.addDomListener(window, 'load', initialize);
</script>